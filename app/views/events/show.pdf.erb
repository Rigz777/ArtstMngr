<div class="col-xs-12 col-md-6 col-md-offset-3 well">
  <%= link_to 'Send Email Invoice', send_invoice_path(event_id: @event.id), class: "btn btn-info" %><br>
  <br>
      <p>
        Event Details
      </p>

  <ul class="event">
    <li><strong>Description: <%= @event.description %></li>
    <li><strong>Talent Buyer: </strong><<%= @event.buyer %>
    <li><strong>Contact: </strong><%= @event.contact_person %></li>
    <li><strong>Phone: </strong><%= @event.phone %></li>
    <li><strong>Email: </strong><%= @event.email %></li>
    <li><strong>Site: </strong><%= @event.website %></li>
    <li><strong>Date: </strong><%= @event.date %></li>
    <li><strong>Time of Performance: </strong><%= @event.time_of_performance %></li>
    <li><strong>Location: </strong><%= @event.location %></li>
    <li><strong>Type of Performance: </strong><%= @event.performance_type %></li>
    <li><strong>Set Length: </strong><%= @event.performance_length %></li>
       <% if @event.other_type %>
    <li><strong></strong><%= @event.other_type %></li>
       <% end %>
    <li><strong>Ticket Price: </strong><%= @event.ticket_price %></li>
    <li><strong>Expected Attendance: </strong><%= @event.expected_attendance %></li>
    <li><strong>Where: </strong><%= @event.indoor_outdoor %></li>
    <li><strong>Performance Price: </strong><%= @event.performance_price %></li>
  </ul>

</div>
