<h1>Dashboard</h1>


<% if notice %>
<p class="alert alert-success">
  <%= notice %>
</p>

<% elsif alert %>

<p class="alert alert-danger">
<%= alert %>
</p>
 <% end %>

<div class="container">
  <div class="row">
    <ul>
    <% @events.each do |event| %>
    <%= link_to event.description, show_event_path(id: event.id) %>
     <% end %>
    </ul>

  </div>

  <div class="row">
    <%= link_to new_event_path, class: "btn btn-info btn-lg" do %>
       <span class="glyphicon glyphicon-plus"></span> New Event
    <% end %>
  </div>

</div>
