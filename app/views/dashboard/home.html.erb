<h1>Dashboard</h1>


<% if notice %>
<p class="alert alert-success">
  <%= notice %>
</p>

<% elsif alert %>

<p class="alert alert-danger">
<%= alert %>
</p>
 <% end %>

<div class="container">

    <div class="row">
      <%= link_to new_event_path, class: "btn btn-info" do %>
         <span class="glyphicon glyphicon-plus"></span> New Event
      <% end %>
    </div>

  <div class="row">
    <div class="wrapper">
    <% @events.each do |event| %>
    <div><%= link_to event.description, show_event_path(id: event.id) %></div>
     <% end %>
   </div>

  </div>


</div>
