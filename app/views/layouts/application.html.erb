<!DOCTYPE html>
<html>
<head>
  <title>ArtstMngr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <span class="navbar-brand" href="#">Artst Mngr</span>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li><%= link_to "Dashboard", root_path %></li>
          <li><%= link_to "Map", map_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin<b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Sign In', sign_in_path%></li>
              <li><%= link_to "Sign Out", sign_out_path %></li>
              <li><%= link_to "Create Account", new_account_path %></li>
            </ul>
          </li>
        </ul>
        <% if @current_account.nil? %>
        <%= link_to "Sign In", sign_in_path, class: "right-button btn btn-default btn-lg" %>
        <% else %>
        <span class="right-nav"> Welcome,  <%= @current_account.email %> </span>
        <% end %>
      </div><!--/.nav-collapse -->

    </div>
  </div>


      <%= yield %>



</body>

</html>
